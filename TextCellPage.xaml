                    <TextCell Text="{Binding Nome}" Detail="{Binding Cargo}" TextColor="Azure" DetailColor="Red"/>
                    <!-- Propriedades do TextCell: TextColor="Azure" DetailColor="Red" -->
                </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
    </ContentPage.Content>
</ContentPage>
